
<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @movies.each do |movie|  %>
  <div class="col">
    <div class="card">
      <img src='<%= movie.poster_url%>' class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text"><%= movie.overview %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
