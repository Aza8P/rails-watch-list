<div class="banner">
 <h2> List of movies in <%= @list.name %></h2>
</div>

<div class="container">
  <div class="justify-content-center row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @list.movies.each do |movie| %>
        <div class="card">
          <h3><%= movie.title %></h3>
          <p><%= movie.overview %></p>
          <%= button_to "Delete", bookmark_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      <% end %>
    </div>
    <div class="d-flex m-3">
      <span class="m-3"><%= link_to "Add a movie", new_list_bookmark_path(@list) %></span>
      <span class="m-3"><%= link_to "Back to lists", lists_path %></span>
    </div>
  </div>
</div>
