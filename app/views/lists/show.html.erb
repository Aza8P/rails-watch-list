
<div class="container">
 <h2 class="p-2 m-3"> List of movies in <%= @list.name %></h2>
  <div class="justify-content-center d-flex m-3">
    <% @list.movies.each do |movie| %>
      <div class="col-sm-6">
          <div class="card shadow m-2 p-3 bg-white rounded">
          <%= image_tag movie.poster_url, class: 'img-fluid' %>
            <h3><%= movie.title %></h3>
            <p><%= movie.overview %></p>
            <button type="button" class="btn btn-outline-danger"><%= link_to "delete", list_path(@list), class: "btn btn-cancel", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this?"} %></button>
          </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex">
    <span class="p-2"><%= link_to "Add a movie", new_list_bookmark_path(@list) %></span>
    <span class="p-2"><%= link_to "Back to lists", lists_path %></span>
  </div>
</div>
